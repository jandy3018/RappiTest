<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rappitest">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/movies"
        android:supportsRtl="true"
        android:theme="@style/Theme.RappiTest">
        <activity android:name=".movies.view.ListPopularAndTopMoviesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".movies.view.DetailMovieActivity" />
        <activity android:name=".movies.view.PlayTrailerActivity"/>
    </application>

</manifest>